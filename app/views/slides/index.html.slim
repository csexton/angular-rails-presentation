      li <strong>Guy 1</strong> I am a comments
      li <strong>Guy 2</strong> I am a comments
      li <strong>Guy 3</strong> I am a comments
      li <strong>Guy 4</strong> I am a comments
      li <strong>Guy 5</strong> I am a comments
      li <strong>Guy 6</strong> I am a comments
  .slide-nav
    span.slide-info slide {{ index+1 }}/{{slides.length}}
    .btn-group
      a.btn.btn-mini ng-disabled="prevDisabled()" ng-click="prevSlide()" Previous
      a.btn.btn-mini ng-disabled="nextDisabled()" ng-click="nextSlide()" Next
